<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="title"
        android:id="@+id/diary_title"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date"
        android:id="@+id/diary_date"
        android:layout_below="@+id/diary_title" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="content"
        android:id="@+id/diary_content"
        android:layout_below="@+id/diary_date" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>